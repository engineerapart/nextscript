{
  "name": "@engineerapart/nextscript",
  "version": "0.0.7",
  "description": "A custom Next script loader for Next.js. Replaces the built-in NextScript component and allows you to apply polyfill pre-loading and business logic.",
  "main": "dist/nextscript.umd.js",
  "module": "dist/nextscript.es5.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --project . && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/engineerapart/nextscript.git"
  },
  "keywords": [
    "next.js",
    "nextjs",
    "next",
    "nextscript",
    "polyfills",
    "preload",
    "preloader"
  ],
  "author": "Patrick <patrick@engineerapart.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/engineerapart/nextscript/issues"
  },
  "homepage": "https://github.com/engineerapart/nextscript#readme",
  "dependencies": {
    "htmlescape": "^1.1.1",
    "prop-types": "^15.6.2",
    "terser": "^3.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-angular": "^7.0.1",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/htmlescape": "^1.1.1",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/prop-types": "^15.5.3",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "conventional-changelog-cli": "^2.0.1",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "validate-commit-msg": "^2.14.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "collectCoverage": true
  }
}
